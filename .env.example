# Flask Configuration
SECRET_KEY=changeme_random_secret_key
JWT_SECRET_KEY=changeme_jwt_secret_key
DEBUG=False

# OpenTAK Server Configuration
OTS_USERNAME=administrator
OTS_PASSWORD=your_ots_password
OTS_URL=https://your-ots-server.com
OTS_VERIFY_SSL=True

# Database Configuration
SQLALCHEMY_DATABASE_URI=sqlite:///db.sqlite

# Email Configuration (Optional - for password reset and notifications)
MAIL_ENABLED=False
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_DEFAULT_SENDER=noreply@example.com

# Help Links
HELP_LINK=https://your-help-docs.com
HELP_EMAIL=help@example.com

# Feature Flags
GENERATE_ITAK_QR_CODE=True
FORGOT_PASSWORD_ENABLED=True
ENABLE_CLAIM_RADIO=True
ITAK_HOMEPAGE_ICON_ENABLED=True
TRUSTSTORE_HOMEPAGE_ICON_ENABLED=True
ZEROTIER_ICON=False

# API Configuration
API_KEY=changeme_random_api_key

# Frontend URL (used for email verification and password reset links)
# If not set or set to localhost, the system will auto-detect the production URL from incoming requests.
# For production deployments, you can leave this unset or explicitly set your domain:
# FRONTEND_URL=https://tak.kggdutchies.nl
# For development, use: FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=*

# Branding
BRAND_NAME=My OTS Portal
PRIMARY_COLOR=#000000
ACCENT_COLOR=#ff9800
LOGO_PATH=/static/img/logo.png

# iTAK Configuration
ITAK_HOSTNAME=your-ots-hostname.com
