# Frontend Settings Configuration
# These environment variables are exposed to the frontend via /api/v1/settings

# ============================================================================
# BRANDING SETTINGS
# ============================================================================

# Portal name displayed in header and welcome message
BRAND_NAME="My OTS Portal"

# Primary color for role badges and other primary UI elements (hex color)
PRIMARY_COLOR="#000000"

# Secondary color (currently unused, reserved for future use)
SECONDARY_COLOR="orange"

# Accent color for buttons, links, and highlights (hex color or name)
ACCENT_COLOR="orange"

# Path to custom logo (relative to /static/)
# Place your logo in app/static/img/
LOGO_PATH="/static/img/logo.png"

# ============================================================================
# HELP & SUPPORT SETTINGS
# ============================================================================

# URL to help documentation (PDF, webpage, etc.)
HELP_LINK="https://www.google.com"

# Support email address displayed to users
HELP_EMAIL="help@example.nl"

# ============================================================================
# TAK SERVER SETTINGS
# ============================================================================

# Enable/disable QR code generation for TAK connections
# When True: Shows "2. Login to ATAK!" step with large QR code
# When False: Hides QR code step, renumbers remaining steps
GENERATE_ITAK_QR_CODE=True

# iTAK server hostname (used for QR code generation)
ITAK_HOSTNAME=""

# OTS server hostname
OTS_HOSTNAME=""

# Full OTS server URL (used for QR codes and downloads)
# Example: https://tak.example.com:8080
OTS_URL=""

# ============================================================================
# FEATURE FLAGS - Installation Icons (Step 1)
# ============================================================================

# Show/hide iTAK download icon
# When True: Shows "Get iTAK" with iPhone download link
ITAK_HOMEPAGE_ICON_ENABLED=True

# Show/hide TrustStore download icon
# When True: Shows "TrustStore" with download link to OTS truststore
TRUSTSTORE_HOMEPAGE_ICON_ENABLED=True

# Show/hide ZeroTier download icon
# When True: Shows "Get Zerotier" with iPhone/Android links
ZEROTIER_ICON=False

# ============================================================================
# FEATURE FLAGS - Functionality
# ============================================================================

# Enable repository feature (future use)
ENABLE_REPO=False

# Enable radio claiming feature
# When True: Users can claim ownership of radios
ENABLE_CLAIM_RADIO=False

# Enable/disable forgot password functionality
# When True: Shows "Change Password" button in user profile
# When False: Hides password change option
FORGOT_PASSWORD_ENABLED=True

# ============================================================================
# CONFIGURATION EXAMPLES
# ============================================================================

# Example 1: Minimal Configuration (Defaults)
# Just set the essentials:
#   BRAND_NAME="My Portal"
#   OTS_URL="https://tak.example.com:8080"
#   HELP_EMAIL="admin@example.com"

# Example 2: Custom Branding
#   BRAND_NAME="KGG Dutchies TAK Portal"
#   PRIMARY_COLOR="#1a1a1a"
#   ACCENT_COLOR="#0066cc"
#   LOGO_PATH="/static/img/kgg-logo.png"

# Example 3: All Icons Enabled
#   ITAK_HOMEPAGE_ICON_ENABLED=True
#   TRUSTSTORE_HOMEPAGE_ICON_ENABLED=True
#   ZEROTIER_ICON=True

# Example 4: Minimal UI (No QR Codes)
#   GENERATE_ITAK_QR_CODE=False
#   ITAK_HOMEPAGE_ICON_ENABLED=False
#   TRUSTSTORE_HOMEPAGE_ICON_ENABLED=False

# ============================================================================
# FRONTEND BEHAVIOR SUMMARY
# ============================================================================

# Step 1 - Install ATAK:
#   Always shows: Meshtastic, ATAK
#   Conditional:
#     - iTAK icon (if ITAK_HOMEPAGE_ICON_ENABLED=True)
#     - TrustStore icon (if TRUSTSTORE_HOMEPAGE_ICON_ENABLED=True)
#     - ZeroTier icon (if ZEROTIER_ICON=True)
#     - iTAK QR code (if GENERATE_ITAK_QR_CODE=True AND ITAK_HOMEPAGE_ICON_ENABLED=True)

# Step 2 - Login to ATAK:
#   Shows large QR code (if GENERATE_ITAK_QR_CODE=True)
#   Hidden if GENERATE_ITAK_QR_CODE=False (step numbering adjusts)

# Step 3/2 - Download Data Packages:
#   Always shown
#   Numbered as "3" if QR step shown, "2" if QR step hidden

# User Profile:
#   Change Password button (if FORGOT_PASSWORD_ENABLED=True)

# ============================================================================
# NOTES
# ============================================================================

# - These settings are exposed via /api/v1/settings endpoint
# - No authentication required (public endpoint)
# - Only non-sensitive configuration is exposed
# - Changes require Flask server restart
# - Frontend automatically fetches settings on page load
